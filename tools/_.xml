<toolSet name="External Tools">
  <tool name="Gradle Build" description="Run gradle wrapper in current project" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$ProjectFileDir$/gradlew" />
      <option name="PARAMETERS" value="build install" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
  <tool name="Test This" description="run gradle test on the current class" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$ProjectFileDir$/gradlew" />
      <option name="PARAMETERS" value="test --tests $FileFQPackage$.$FileNameWithoutExtension$" />
      <option name="WORKING_DIRECTORY" value="$ModuleFileDir$" />
    </exec>
  </tool>
</toolSet>